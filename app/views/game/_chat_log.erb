<div id="chat-log">
  <h2>Chat</h2>

  <div class="chat-messages form-group">
    <% for message in game.messages.last(10) %>
      <% if message.user == "Red" %>
        <div class="card text-white bg-danger mb-3" style="max-width: 10rem;">
      <% elsif message.user == "Blue" %>
        <div class="card text-white bg-info mb-3 ml-auto" style="max-width: 10rem;">
      <% else %>
        <div class="card text-white bg-warning mb-3" style="max-width: 10rem;">
      <% end %>
          <div class="card-header">
            <%= message.user %>
          </div>
          <div class="card-body">
            <%= message.text %> 
          </div>
        </div> 
    <% end %>
    <textarea id="message-box" data-controller="game" data-action="keyup->game#send_message"></textarea>
  </div>
</div>